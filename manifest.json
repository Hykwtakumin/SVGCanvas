{
  "name": "SVGCanvas",
  "version": "0.0.5",
  "description": "browser extension that improves SVG usage in scrapbox",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {},
  "permissions": ["activeTab", "downloads", "tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["https://scrapbox.io/*"],
      "css": ["styles/content.css"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "page": "pages/background.html",
    "script": "scripts/background.js",
    "persistent": false
  },
  "options_page": "pages/option.html",
  "options_ui": {
    "page": "pages/option.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "/icons/resizedImage.png",
    "icons/icon128.png",
    "icons/icon48.png"
  ],
  "manifest_version": 2
}
